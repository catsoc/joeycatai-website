---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BlogCard from '@/components/BlogCard.astro';
import ProjectCard from '@/components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter((p) => p.data.featured)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="joeycatai · 個人官方網站" description="嗨，我是 joeycatai，這裡是我的個人網站，分享技術文章、專案與想法。">
  <!-- Hero -->
  <section class="container-base pt-20 pb-16">
    <div class="max-w-2xl">
      <p class="text-accent-600 dark:text-accent-400 font-mono text-sm mb-4">$ whoami</p>
      <h1 class="text-4xl sm:text-5xl font-bold text-slate-900 dark:text-slate-100 mb-6 leading-tight">
        嗨，我是 <span class="text-accent-600 dark:text-accent-400">joeycatai</span>
      </h1>
      <p class="text-xl text-slate-600 dark:text-slate-400 mb-8 leading-relaxed">
        軟體工程師 · 開源愛好者 · 分享技術、專案與思考。
      </p>
      <div class="flex flex-wrap gap-3">
        <a href="/about" class="btn-primary">關於我</a>
        <a href="/projects" class="btn-secondary">查看專案</a>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  {featuredProjects.length > 0 && (
    <section class="container-base py-12 border-t border-slate-100 dark:border-slate-800">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100">精選專案</h2>
        <a href="/projects" class="text-sm text-accent-600 dark:text-accent-400 hover:underline">
          所有專案 →
        </a>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredProjects.map((project) => (
          <ProjectCard
            title={project.data.title}
            description={project.data.description}
            slug={project.slug}
            tags={project.data.tags}
            heroImage={project.data.heroImage}
            github={project.data.github}
            demo={project.data.demo}
            status={project.data.status}
            featured={project.data.featured}
          />
        ))}
      </div>
    </section>
  )}

  <!-- Recent Posts -->
  {recentPosts.length > 0 && (
    <section class="container-base py-12 border-t border-slate-100 dark:border-slate-800">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-bold text-slate-900 dark:text-slate-100">最新文章</h2>
        <a href="/blog" class="text-sm text-accent-600 dark:text-accent-400 hover:underline">
          所有文章 →
        </a>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {recentPosts.map((post) => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            slug={post.slug}
            tags={post.data.tags}
            heroImage={post.data.heroImage}
          />
        ))}
      </div>
    </section>
  )}
</BaseLayout>

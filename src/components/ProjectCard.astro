---
export interface Props {
  title: string;
  description: string;
  slug: string;
  tags?: string[];
  heroImage?: string;
  github?: string;
  demo?: string;
  status?: 'active' | 'completed' | 'archived';
  featured?: boolean;
}

const { title, description, slug, tags = [], heroImage, github, demo, status = 'completed', featured = false } = Astro.props;

const statusLabel = { active: '進行中', completed: '已完成', archived: '已封存' }[status];
const statusColor = {
  active: 'bg-green-100 text-green-700 dark:bg-green-900/40 dark:text-green-300',
  completed: 'bg-blue-100 text-blue-700 dark:bg-blue-900/40 dark:text-blue-300',
  archived: 'bg-slate-100 text-slate-600 dark:bg-slate-800 dark:text-slate-400',
}[status];
---

<div class={`card group flex flex-col gap-4 ${featured ? 'ring-1 ring-accent-200 dark:ring-accent-800' : ''}`}>
  {heroImage && (
    <a href={`/projects/${slug}`}>
      <img
        src={heroImage}
        alt={title}
        class="w-full aspect-video object-cover rounded-lg"
        loading="lazy"
      />
    </a>
  )}
  <div class="flex flex-col gap-2 flex-1">
    <div class="flex flex-wrap items-center gap-1.5">
      <span class={`inline-block px-2.5 py-0.5 rounded-full text-xs font-medium ${statusColor}`}>
        {statusLabel}
      </span>
      {featured && (
        <span class="inline-block px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700 dark:bg-amber-900/40 dark:text-amber-300">
          精選
        </span>
      )}
    </div>

    <a href={`/projects/${slug}`} class="group">
      <h2 class="text-lg font-semibold text-slate-900 dark:text-slate-100 group-hover:text-accent-600 dark:group-hover:text-accent-400 transition-colors">
        {title}
      </h2>
    </a>

    <p class="text-sm text-slate-600 dark:text-slate-400 line-clamp-3 flex-1">
      {description}
    </p>

    <div class="flex flex-wrap gap-1.5 mt-1">
      {tags.slice(0, 4).map((tag) => <span class="tag">{tag}</span>)}
    </div>

    <!-- Links -->
    <div class="flex items-center gap-3 mt-2">
      {demo && (
        <a
          href={demo}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1 text-sm text-accent-600 dark:text-accent-400 hover:underline"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Demo
        </a>
      )}
      {github && (
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1 text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-100"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
          </svg>
          GitHub
        </a>
      )}
      <a
        href={`/projects/${slug}`}
        class="inline-flex items-center gap-1 text-sm text-slate-500 dark:text-slate-400 hover:text-slate-900 dark:hover:text-slate-100 ml-auto"
      >
        詳細介紹 →
      </a>
    </div>
  </div>
</div>
